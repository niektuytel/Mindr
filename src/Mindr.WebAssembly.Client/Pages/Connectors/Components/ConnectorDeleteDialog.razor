@using Mindr.WebAssembly.Client.Components
@using MudBlazor

@namespace Mindr.WebAssembly.Client.Pages.Connectors.Components
@inherits LayoutComponentBase

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Delete Connector
        </MudText>
    </TitleContent>
    <DialogContent>
        Are you sure to delete this connector?
        @if (IsLoading)
        {
            <MudProgressLinear Color="Color.Info" Indeterminate="true" />
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="HandleDialogClose">Cancel</MudButton>
        <MudButton Color="Color.Transparent" OnClick="HandleOnConfirm">Confirm</MudButton>
    </DialogActions>
</MudDialog>