@using Microsoft.AspNetCore.Authorization
@using Mindr.WebAssembly.Client.Components
@using Mindr.Domain.Models.DTO.Connector
@using System.Collections.ObjectModel
@using Mindr.WebAssembly.Client.Models
@using MudBlazor;

@namespace Mindr.WebAssembly.Client.Pages.Connectors.Dialogs
@inherits LayoutComponentBase

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Create Connector
        </MudText>
    </TitleContent>
    <DialogContent>
        @if (IsLoading)
        {
            <MudProgressLinear Color="Color.Info" Indeterminate="true" />
        }
        else
        {
            <MudTextField @bind-Value="@Connector.Name" Label="Name" Variant="Variant.Text" Margin="Margin.Dense" />
            <MudTextField @bind-Value="@Connector.Description" Label="Description" Variant="Variant.Text" Margin="Margin.Dense" />
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="HandleDialogClose">Cancel</MudButton>
        <MudButton Color="Color.Transparent" OnClick="HandleOnCreate">Create</MudButton>
    </DialogActions>
</MudDialog>


