@using Mindr.WebAssembly.Client.Components
@using MudBlazor

@namespace Mindr.WebAssembly.Client.Shared.Header
@inherits LayoutComponentBase


<MudMenu FullWidth="true" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
    <ActivatorContent>
        <MudAvatar>
            <MudImage Src="@Client.Constants.Logo" height="35" />
        </MudAvatar>
    </ActivatorContent>
    <ChildContent>
        <MudMenuItem>Profile</MudMenuItem>
        <MudMenuItem>Theme</MudMenuItem>
        <MudMenuItem>Usage</MudMenuItem>
        <MudMenuItem>Sign Out</MudMenuItem>
    </ChildContent>
</MudMenu>

