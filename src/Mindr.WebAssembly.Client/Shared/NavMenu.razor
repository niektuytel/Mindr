        <MudNavLink Href="/calendar" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.LibraryBooks">Calendar</MudNavLink>
        <MudNavLink Href="/connectors" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Group">Connectors</MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code {
