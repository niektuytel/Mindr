@namespace Mindr.WebUI.Pages.Agenda.Components
@using Mindr.Core.Models.Connector
@inherits FluentComponentBase

<div style="width: -webkit-fill-available;">
    @Date.ToShortDateString() Events
    @if (Data?.Any() == true)
    {
        foreach (var item in Data)
        {
            <AgendaEventItem Data="@item" EventDialogRef="@_connectorEventDialog"/>
        }
    }
</div>
<ConnectorEventDialog @ref="@_connectorEventDialog" OnChanged="OnChanged"/>
