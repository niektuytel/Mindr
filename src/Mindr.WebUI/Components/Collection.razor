@using Mindr.WebUI.Models;

<FluentTreeView>
    @foreach (var collection in Data)
    {
        <FluentTreeItem Expanded="false">
            <FluentIcon Name="@FluentIcons.Collections" Slot="start" Size="@IconSize.Size20" Color=Color.Neutral />
            @collection.info.name
            @foreach(var folder in collection.Overview)
            {
                <CollectionItem Data="@folder" OnAddHandle="OnAddHandle" />
            }
        </FluentTreeItem>
    }
</FluentTreeView>

@code {
    [Parameter, EditorRequired]
    public IEnumerable<CollectionData> Data { get; set; } = default!;

    [Parameter, EditorRequired]
    public Action<HttpOverview> OnAddHandle { get; set; } = default!;
}
