{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "cluster1",
        "AuthorizationPolicy": "CookieAuthenticationPolicy",
        "Match": {
          "Path": "api/DantooineApi"
        }
      },
      "mindr-api-route": {
        "ClusterId": "mindr-api-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
        //"Transforms": [
        //  { "PathPrefix": "/web1" }
        //]
      }
    },

    "Clusters": {
      "cluster1": {
        "Destinations": {
          "cluster1/destination1": {
            "Address": "https://localhost:7155/"
          }
        }
      },
      "mindr-api-cluster": {
        "Destinations": {
          "mindr-api-cluster/destination1": {
            "Address": "https://localhost:7155/"
          }
        }
      }
    }
  }
}
