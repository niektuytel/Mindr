@using Mindr.Client.Components

@namespace Mindr.Client.Shared
@inherits FluentComponentBase

<header>
    <img src="@Client.Constants.Logo" height="35px" />
    <Stack 
        Orientation="Orientation.Horizontal" 
        HorizontalAlignment="StackHorizontalAlignment.Right" 
        VerticalAlignment="StackVerticalAlignment.Center"
        HorizontalGap="1" 
    >
        @*<AdministratorsMenu />*@
        <FluentButton 
            class="light-switch" 
            title="light/dark mode"
            @onclick="@(async() => await ChangeTheme())" 
        >
            @if (LuminanceTheme == StandardLuminance.DarkMode)
            {
                <FluentIcon Name="@FluentIcons.Lightbulb" Size="@IconSize.Size16" Variant="@IconVariant.Regular" Color="@Color.Accent" />
            }
            else
            {
                <FluentIcon Name="@FluentIcons.Lightbulb" Size="@IconSize.Size16" Variant="@IconVariant.Filled" Color="@Color.Accent"/>
            }
        </FluentButton>
        <ProfileButton />
    </Stack>
</header>